#canvas
  display block
  margin-left auto
  margin-right auto

a.menu-link
  color black
  display block
  margin 20px auto 0
  width 200px
  text-align center
  text-decoration none
  font-family sans-serif
  font-size 32px
  border 3px solid black
  border-radius 10px
  &:hover
    background #ccc

direction-control(pos-top, pos-left)
  width 100px
  height 100px
  background black
  color white
  line-height 100px
  left 100px + pos-left
  top 50px + pos-top
  font-size 20px


.control
  position absolute
  text-align center
  font-family sans-serif
  border-radius 25px

  &.fire
    top 100px
    right 100px
    width 200px
    height 200px
    line-height 200px
    font-size 32px
    color white
    background red

  &.up
    direction-control(0px, 100px)

  &.right
    direction-control(100px, 200px)

  &.left
    direction-control(100px, 0px)

  &.down
    direction-control(200px, 100px)
