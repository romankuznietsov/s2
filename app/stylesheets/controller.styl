.info
  font-family sans-serif
  font-size 32px
  text-align center

.key
  font-family sans-serif
  text-align center
  border-radius 30px
  color white
  font-size 24px
  position fixed

.left-key, .right-key
  position absolute
  height 160px
  width 120px
  background black
  line-height 160px

.left-key
  left 10px
  bottom 10px

.right-key
  left 140px
  bottom 10px

.up-key, .down-key
  background black
  width 80px
  height 80px
  right 10px
  line-height 80px

.up-key
  bottom 180px
  right 10px

.down-key
  bottom 180px
  right 100px

.fire-key
  bottom 10px
  right 10px
  height 160px
  width 170px
  background red
  line-height 160px
