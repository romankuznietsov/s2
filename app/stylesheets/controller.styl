key-color = #08f
fire-key-color = #f44

body
  background black

.info
  font-family sans-serif
  font-size 32px
  text-align center
  color key-color
  text-shadow 0 0 10px key-color

.key
  font-family sans-serif
  text-align center
  border-radius 30px
  font-size 24px
  position fixed
  background black

.key:active, .key:hover
  background white

.left-key, .right-key
  position absolute
  height 160px
  width 120px
  line-height 160px
  color key-color
  text-shadow 0 0 10px key-color
  border 2px solid key-color
  box-shadow 0 0 10px key-color

.left-key
  left 10px
  bottom 10px

.right-key
  left 140px
  bottom 10px

.up-key, .down-key
  width 80px
  height 80px
  right 10px
  line-height 80px
  color key-color
  text-shadow 0 0 10px key-color
  border 2px solid key-color
  box-shadow 0 0 10px key-color

.up-key
  bottom 180px
  right 10px

.down-key
  bottom 180px
  right 100px

.fire-key
  bottom 10px
  right 10px
  height 160px
  width 170px
  line-height 160px
  color fire-key-color
  text-shadow 0 0 10px fire-key-color
  border 2px solid fire-key-color
  box-shadow 0 0 10px fire-key-color
